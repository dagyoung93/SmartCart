<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD" >

    <RelativeLayout
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="7dp"
            android:text="" />

        <ImageView
            android:id="@+id/remove_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/remove_btn" />

        <Button
            android:id="@+id/decrease_quantity_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/product_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bordered"
            android:gravity="center"
            android:text="-"
            android:textScaleX="3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantity_view"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/decrease_quantity_btn"
            android:layout_toRightOf="@id/decrease_quantity_btn"
            android:background="@drawable/button_bordered"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/increase_quantity_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/quantity_view"
            android:layout_toRightOf="@id/quantity_view"
            android:background="@drawable/button_bordered"
            android:gravity="center"
            android:text="+"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/product_cost_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/quantity_view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="원"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>